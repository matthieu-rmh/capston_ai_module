<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- Pages list -->
    <template id="capston_dashboard_pages_list" name="Capston AI Pages List">
    <t t-call="capston_ai.capston_dashboard_template">
      <div class="container-fluid">
        <header class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="fw-bold" style="font-family: Recoleta;">Pages list</h2>
            </div>
            
        </header>
        <div id="pages-list-table-container">
            <table class="table table-striped border">
                    <thead class="bg-light">
                        <tr>
                            <th>URL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="url_list" t-as="url_item">
                            <tr>
                                <td class="fw-bold"><t t-esc="url_item['url']"/></td>
                                <td>
                                    <a t-att-href="url_item['url']" class="btn btn-sm btn-primary">
                                        Visit Page
                                    </a>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
        </div>

      </div>
      </t>
    </template>

    <!-- AI Search Console -->

  <template id="capston_ai_search_console" name="Capston AI Search Console">
    <t t-call="capston_ai.capston_dashboard_template">
      <div class="dashboard-container">
    <header class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="display-6">AI Visibility Overview</h1>
            <p class="text-muted small">See your current GEO score, what's driving it up or down, and the next best fixes.</p>
            <span class="text-muted smaller" style="font-size: 0.8rem;">Last scan: 5d ago</span>
        </div>
        <button class="btn btn-scan"><i class="bi bi-arrow-clockwise me-2"></i>Run New Scan</button>
    </header>

    <div class="quick-wins mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-lightning-fill me-2"></i>Quick Wins</h5>
            <a href="#" class="text-dark small text-decoration-none">View all <i class="bi bi-chevron-right"></i></a>
        </div>
        
        <div class="win-row urgent">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-danger me-3" style="width: 10px; height: 10px;"></div>
                <div>
                    <div class="fw-bold small">Add Schema.org structured data</div>
                    <div class="text-muted smaller" style="font-size: 0.75rem;">Help AI understand your content better</div>
                </div>
            </div>
            <div class="fw-bold text-danger">+15 pts</div>
        </div>

        <div class="win-row">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-warning me-3" style="width: 10px; height: 10px;"></div>
                <div>
                    <div class="fw-bold small">Optimize meta descriptions</div>
                    <div class="text-muted smaller" style="font-size: 0.75rem;">Improve how AI cites your pages</div>
                </div>
            </div>
            <div class="fw-bold">+8 pts</div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="capston-card">
                <div class="d-flex justify-content-between">
                    <h6 class="fw-bold"><i class="bi bi-bullseye me-2"></i>GEO Score</h6>
                    <a href="#" class="text-muted small text-decoration-none">Details <i class="bi bi-chevron-right"></i></a>
                </div>
                <div class="mt-4">
                    <span class="display-3 fw-bold">0</span><span class="text-muted"> /100</span>
                    <p class="text-muted small mt-2">Your overall AI visibility optimization score</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="capston-card locked-card border">
                <div class="bg-light p-3 rounded-3 mb-3">
                    <i class="bi bi-lock-fill fs-4 text-dark"></i>
                </div>
                <h6 class="fw-bold">AI Citations</h6>
                <p class="small px-5 text-muted">Track how often AI platforms cite your site with links across monitored prompts.</p>
                <a href="#" class="text-dark small fw-bold">See plans</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="capston-card">
                <div class="d-flex justify-content-between mb-4">
                    <h6 class="fw-bold"><i class="bi bi-bar-chart-steps me-2"></i>GEO Score Breakdown</h6>
                    <a href="#" class="text-muted small text-decoration-none">Optimize <i class="bi bi-chevron-right"></i></a>
                </div>
                
                <div class="mb-3">
                    <div class="d-flex justify-content-between small fw-bold">
                        <span>Citation Readiness (CRS)</span>
                        <span>0/100</span>
                    </div>
                    <div class="progress-custom"><div class="progress-bar-fill"></div></div>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between small fw-bold">
                        <span>AI Friendliness (AFS)</span>
                        <span>0/100</span>
                    </div>
                    <div class="progress-custom"><div class="progress-bar-fill"></div></div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="capston-card locked-card border">
                <div class="bg-light p-3 rounded-3 mb-3">
                    <i class="bi bi-lock-fill fs-4 text-dark"></i>
                </div>
                <h6 class="fw-bold">Share of Voice</h6>
                <p class="small px-5 text-muted">Compare your AI visibility against competitors across all platforms.</p>
                <a href="#" class="text-dark small fw-bold">See plans</a>
            </div>
        </div>
    </div>
</div>
      </t>
    </template>
  

</odoo>