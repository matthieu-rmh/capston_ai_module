<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree View for Main data -->
<record id="capston_data_tree" model="ir.ui.view">
   <field name="name">capston.data.tree</field>
   <field name="model">capston.data</field>
   <field name="arch" type="xml">
       <list>
           <field name="title"/>
           <field name="description"/>
       </list>
   </field>
</record>
<!-- Form View for capston.data -->
<record id="views_capston_data_form" model="ir.ui.view">
   <field name="name">capston.data.form</field>
   <field name="model">capston.data</field>
   <field name="arch" type="xml">
       <form>
           <header>
               <!-- <button name="action_activate" string="Activate" type="object" class="oe_highlight" invisible="is_active == True"/>
               <button name="action_deactivate" string="Deactivate"
                       type="object" invisible="is_active == False"/> -->
            <header>
                <button name="test" string="Test Button" type="object" class="btn-primary"/>
            </header>
           </header>
           <sheet>
               <group>
                   <group>
                        <field name="title"/>
                        <field name="description"/>
                   </group>
                   <group>
                       <!-- <field name="subscription_date"/>
                       <field name="category_id"/>
                       <field name="source"/> -->
                   </group>
               </group>
               <!-- <div class="oe_chatter">
                   <field name="message_ids" widget="mail_thread"/>
               </div> -->
           </sheet>
       </form>
   </field>
</record>
<!-- Action and Menu Items -->
<record id="action_capston_data" model="ir.actions.act_window">
   <field name="name">Capston Data</field>
   <field name="res_model">capston.data</field>
   <field name="view_mode">list,form</field>
</record>
<menuitem id="menu_capston_root" name="Capston"/>
<menuitem id="menu_capston_data" name="Capston Data" parent="menu_capston_root" action="action_capston_data"/>

   </data>
</odoo>